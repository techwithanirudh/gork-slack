{
  "compilerOptions": {
    "target": "ES2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "moduleDetection": "force",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "server",
    "baseUrl": ".",
    "paths": {
      "~/*": ["server/*"]
    }
  },
  "include": ["server/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
