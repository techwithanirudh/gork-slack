{
  "name": "gork-slack",
  "version": "1.0.0",
  "license": "MIT",
  "description": "A human-like bot (called Gork) that is almost indistinguishable from a real person. This is a port of the original Gork for Discord to Slack.",
  "private": true,
  "scripts": {
    "dev": "bun run --watch server/index.ts",
    "start": "bun run server/index.ts",
    "check": "ultracite check .",
    "check:spelling": "cspell -c .cspell.jsonc --no-progress --no-summary --no-must-find-files --unique --cache",
    "check:unsafe": "ultracite fix --unsafe true .",
    "check:write": "ultracite fix .",
    "typecheck": "tsc --noEmit",
    "prepare": "lefthook install"
  },
  "dependencies": {
    "@ai-sdk/openai-compatible": "^2.0.18",
    "@date-fns/tz": "^1.4.1",
    "@exalabs/ai-sdk": "^1.0.5",
    "@langfuse/otel": "^4.5.1",
    "@langfuse/tracing": "^4.5.1",
    "@openrouter/ai-sdk-provider": "^2.0.1",
    "@opentelemetry/sdk-node": "^0.211.0",
    "@pinecone-database/pinecone": "^6.1.4",
    "@slack/bolt": "^4.6.0",
    "@slack/types": "^2.19.0",
    "@t3-oss/env-core": "^0.13.10",
    "ai": "^6.0.49",
    "ai-retry": "^1.0.2",
    "chalk": "^5.6.2",
    "date-fns": "^4.1.0",
    "p-queue": "^9.1.0",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.12",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@commitlint/types": "^20.3.1",
    "@cspell/dict-bash": "^4.2.2",
    "@types/bun": "^1.3.6",
    "cspell": "^9.6.0",
    "lefthook": "^2.0.15",
    "typescript": "^5.9.3",
    "ultracite": "7.0.12"
  }
}
